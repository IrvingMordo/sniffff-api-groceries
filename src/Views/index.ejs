<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <title>Grocery stores</title>
</head>

<body>
    <div data-role="page" id="groceryPage">
        <div data-role="header" data-theme="b">
            <h1>Groceries Mordo</h1>
            <div data-role="navbar">
                <ul>
                    <li><a href="#" data-icon="home">Home</a></li>
                     <li><a href="#" data-icon="tag" class="ui-btn-active">Products</a></li>
                    <li><a href="#" data-icon="user">Clients</a></li>
                </ul>
                    
            </div>
        </div>
        <div data-role="content" data-theme="b">
            <form action="/api/products/" method="POST">
                <div class="ui-field-contain">
                    <label for="txt_barcode">Barcode</label>
                    <input  type="text" name="barcode" id="txt_barcode" placeholder="Enter the barcode" value="">
                </div>

                <div class="ui-field-contain">
                    <label for="txt_description">Description</label>
                    <input  type="text" name="description" id="txt_description" placeholder="Enter the description" value="">
                </div>

                <div class="ui-field-contain">
                    <label for="txt_brand">Brand</label>
                    <input  type="text" name="brand" id="txt_brand" placeholder="Enter the brand of the product" value="">
                </div>

                <div class="ui-field-contain">
                    <label for="txt_cost">Cost</label>
                    <input  type="number" name="cost" id="txt_cost" placeholder="Enter the cost" value="">
                </div>

                <div class="ui-field-contain">
                    <label for="txt_price">Price</label>
                    <input  type="number" name="price" id="txt_price" placeholder="Enter the price" value="">
                </div>

                <div class="ui-field-contain">
                    <label for="txt_stock">Stock</label>
                    <input  type="number" name="stock" id="txt_stock" placeholder="Enter product stock" value="">
                </div>

                <div class="ui-field-contain">
                    <label for="txt_expiredDate">Expired Date</label>
                    <input type="date" name="expiredDate" id="txt_expiredDate">
                </div>

                <label for="status">Active: </label>
                <select name="status" id="status" data-role="slider" data-mini="true" class="ui-mini ui-btn-inline custom-toggle">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>

                <button class="ui-shadow ui-btn ui-corner-all" type="submit" id="button">Save</button>

            </form>
            <form>
                <input data-type="search" id="searchForCollapsibleSet">
            </form>
                    <div data-role="collapsibleset" data-filter="true" data-inset="true" id="collapsiblesetForFilter" data-input="#searchForCollapsibleSet">
                    <% products.forEach((product) => { %>
                        <div data-role="collapsible" data-filtertext="<%= product.description %>">
                            <h3><%= product.description %></h3>
                                <ul data-role="listview" data-inset="false">
                                    <li>Barcode: <%= product.barcode %></li>
                                    <li>Brand: <%= product.brand %></li>
                                    <li>Price: <%= product.price %></li>
                                    <li>Cost: <%= product.cost %></li>
                                    <li>Stock: <%= product.stock %></li>
                                    <li>Expired Date: <%= product.expiredDate %></li>
                                    <li>Status: <%= product.status %></li>
                                    <li>
                                        <a href="/api/products/<%= product.barcode %>" class="ui-btn">Edit</a>
                                        <a href="/api/products/delete/<%= product.barcode %>" class="ui-btn">Delete</a>
                                    </li>
                                </ul>
                        </div>
                    <% }) %>
        <div data-role="footer" data-theme="b">
            <h4>&copy; 2024 Grocery Mordo</h4>
        </div>
    </div>
</body>

</html>


